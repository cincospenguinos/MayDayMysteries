<h1>Login</h1>

<% if logged_in? %>
  <p>You are already logged in as <%= current_user.username %>.</p>
  <%= link_to 'Logout', '/login', method: :delete %>
<% else %>
  <%= form_tag '/login' do %>
    <%= label_tag :username %>
    <%= text_field_tag :username %>
    <%= label_tag :password %>
    <%= password_field_tag :password %>
    <%= submit_tag 'Login' %>
  <% end %>
<% end %>
